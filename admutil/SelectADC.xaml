<Window x:Class="ADMUtil.SelectADC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADMUtil"
        mc:Ignorable="d"
        Title="Select an ADC:" Height="450" Width="260.896" Background="Black" ResizeMode="NoResize">
    <Grid>
        <ListView x:Name="ADCList" HorizontalAlignment="Left" Height="360" Margin="10,10,0,0" VerticalAlignment="Top" Width="224" ItemContainerStyle="{StaticResource ListViewItemOptionStyle}" DataContext="{Binding}" Background="Black" Foreground="White" SelectionMode="Single">
            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource HeaderStyle}">
                    <GridViewColumn />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Select" HorizontalAlignment="Left" Margin="134,378,0,0" VerticalAlignment="Top" Width="100" IsDefault="True" Click="Button_Click_1" />
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="10,378,0,0" VerticalAlignment="Top" Width="95" IsCancel="True" Click="Button_Click" />
    </Grid>
</Window>